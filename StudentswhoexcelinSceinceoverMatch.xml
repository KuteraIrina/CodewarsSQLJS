SELECT
  s.id AS student_id,
  s.name,
  c_science.score - c_math.score AS score_difference
FROM
  students s
JOIN
  courses c_science ON s.id = c_science.student_id AND c_science.course_name = 'Science'
JOIN
  courses c_math ON s.id = c_math.student_id AND c_math.course_name = 'Math'
WHERE
  c_science.score > c_math.score
ORDER BY
  score_difference DESC, student_id ASC;